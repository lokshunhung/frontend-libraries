{
    "name": "@pinnacle0/frontend-libraries",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "packages/*"
        ]
    },
    "scripts": {
        "canadyarn": "canadyarn"
    },
    "checkSingleVersionDependencies": [
        "@types/react",
        "@types/react-dom",
        "react",
        "react-dom"
    ],
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "@types/chalk": "2.2.0",
        "@types/eslint": "7.2.6",
        "@types/fs-extra": "9.0.4",
        "@types/jest": "26.0.16",
        "@types/node": "14.14.10",
        "@typescript-eslint/eslint-plugin": "4.9.1",
        "@typescript-eslint/parser": "4.9.1",
        "canadyarn": "0.0.2",
        "chalk": "4.1.0",
        "eslint": "7.15.0",
        "eslint-config-prettier": "7.0.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-react": "7.21.5",
        "eslint-plugin-react-hooks": "4.2.0",
        "fs-extra": "9.0.1",
        "husky": "3.1.0",
        "jest": "26.6.3",
        "lint-staged": "10.5.3",
        "prettier": "2.2.1",
        "stylelint": "13.8.0",
        "stylelint-config-prettier": "8.0.2",
        "stylelint-config-standard": "20.0.0",
        "ts-jest": "26.4.4",
        "ts-node": "9.1.0",
        "typescript": "4.1.2",
        "yargs": "16.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint --env HUSKY_GIT_PARAMS --config config/commitlint.config.js"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint",
            "prettier --write"
        ],
        "*.{css,html,json,less,yaml,yml}": [
            "prettier --write"
        ]
    }
}

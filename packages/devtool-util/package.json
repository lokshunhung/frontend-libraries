{
    "name": "@pinnacle0/devtool-util",
    "version": "0.0.3",
    "license": "MIT",
    "main": "src/index.js",
    "types": "src/index.d.ts",
    "scripts": {
        "code-style-check": "prettier --check \"{config,src,test}/**/*.{js,ts}\"",
        "lint": "eslint --ext .js,.ts --ignore-path ../../.eslintignore",
        "compile": "tsc --project config/tsconfig.src.json",
        "test": "jest --config config/jest.config.js",
        "copy-static-files": "node script/copyStaticFiles.js",
        "build": "yarn run code-style-check && yarn run lint && yarn run test && yarn run compile && yarn run copy-static-files"
    },
    "dependencies": {
        "axios": "0.21.0",
        "fs-extra": "9.0.1",
        "yargs": "16.1.1"
    },
    "peerDependencies": {
        "prettier": "^2.2.0"
    },
    "devDependencies": {
        "prettier": "^2.2.0"
    },
    "jest": {
        "preset": "ts-jest",
        "watchPathIgnorePatterns": [
            "/__tmp__/"
        ]
    }
}

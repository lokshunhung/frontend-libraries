{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "target": "ES5",
        "rootDir": "../",
        "noEmit": true,

        "paths": {
            "@pinnacle0/web-ui/*": ["../src/*"],
            "@pinnacle0/web-ui-stories/*": ["../stories/*"]
        },

        "isolatedModules": true,
        "jsx": "react",
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["../src/", "../stories/"]
}

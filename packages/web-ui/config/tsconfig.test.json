{
    "extends": "../../../config/tsconfig.base.json",
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "rootDir": "../",
        "outDir": "../build/tsc-out/",
        "target": "ES2018",

        "baseUrl": "../",
        "paths": {
            "@pinnacle0/web-ui/*": ["src/*"],
            "test/*": ["test/*"]
        },

        "jsx": "react",
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["../src/", "../test/"]
}

{
    "extends": "../../../config/tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "jsx": "react",
        "lib": ["ES2020"],
        "module": "CommonJS",
        "outDir": "../dist/cjs/",
        "rootDir": "../src/",
        "target": "ES2015",
        "suppressImplicitAnyIndexErrors": true,
        "tsBuildInfoFile": "../dist/tsconfig.cjs.lib.tsbuildinfo"
    },
    "include": ["../src/"],
    "exclude": ["../src/browser/"],
    "references": [
        {
            "path": "./tsconfig.cjs.browser.json"
        }
    ]
}
